<div class=" w-full">
  <%=form_with model: [@category, @category.expenses.create], class:"input-form h-screen"  do |f|%>
    <nav class="text-center text-gray-200 tracking-wider bg-[#3778c2] py-3">
      <ul class="flex gap-x-24">
        <li>
          <a href="/"><i class="fa fa-arrow-left pl-4"></i></a>
        </li>
        <li>
          <h2 class="text-xl">Add Transaction</h2>
        </li>
        <li>
        </li>
      </ul>
    </nav>
    <%= f.hidden_field :author_id, value: current_user.id %>
    <div class="text-center mt-20">
      <div class="m-5 mb-3">
        <%= f.text_field :name,required: true, class:"p-2 form-control", placeholder: "Name", id: "name"%><br>
      </div>
      <div class="m-5 mb-3">
        <%=f.text_field :category, value:@category.name, class:"p-2 form-control"%><br>
      </div>
      <div class="m-5 mb-3">
        <%= f.number_field :amount ,  class:"p-2 form-control" , required: true, placeholder: 'Amount',  min: 1, id:"amount"%><br>
      </div>
    </div>
    <div class="flex justify-center items-center text-center">
      <%= f.submit "Create Transaction", class: "mt-20 mb-12 px-14 bg-green-600 text-xl font-light py-3 text-center text-white hover:bg-green-dark focus:outline-none" %>
    </div>
  <%end%>
</div>