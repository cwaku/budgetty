<div class=" w-full">
  <%= form_with model: @category, class:"input-form h-screen"  do |f|%>
    <nav class="text-center text-gray-200 tracking-wider bg-[#3778c2] py-3">
      <ul class="flex gap-x-32">
        <li>
          <a href="/"><i class="fa fa-arrow-left pl-4"></i></a>
        </li>
        <li>
          <h2 class="text-2xl">Add Category</h2>
        </li>
      </ul>
    </nav>
    <div class="flex justify-center items-center text-center mt-20 w-full mb-3">
      <%= f.text_field :name,  required: true,  class:"p-2 form-control", placeholder: "Name", id:'name'%><br>
    </div>
    <div class="flex justify-center items-center text-center py-4 w-full h-16">
      <%= f.select :icon, options_for_select([
        ['Grocery', @icons["Grocery"]],
        ['Shopping' ,@icons["Shopping"]],
        ['Education' ,@icons["Education"]],
        ['Bills' ,@icons["Bills"]],
        ['Insurance' ,@icons["Insurance"]],
        ['Travel' ,@icons["Travel"]],
      ]),{ include_blank: "Select Icon"}, required: true , class:"form-select"%>
    </div>
  
    <div class="flex justify-center items-center text-center">
      <%= f.submit "Create Category", class: "w-2/12 text-center py-3 rounded bg-indigo-600 text-white hover:bg-green-dark focus:outline-none" %>
    </div>
  <%end%>
</div>